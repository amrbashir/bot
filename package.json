{
  "name": "tauri-apps-bot",
  "version": "1.0.0",
  "private": true,
  "description": "A bot for tauri-apps to automate various tasks.",
  "license": "MIT OR Apache-2.0",
  "homepage": "https://github.com/tauri-apps/tauri-apps-bot",
  "keywords": [
    "probot",
    "github",
    "probot-app",
    "tauri-apps"
  ],
  "main": "dist/worker.js",
  "scripts": {
    "prepare": "husky install",
    "build:bot": "tsup src/bot.ts --format cjs",
    "build:worker": "tsup src/worker.ts --format cjs",
    "start": "probot run ./dist/bot.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write --end-of-line=auto \"./**/*.{js,ts,json}\" --ignore-path .gitignore"
  },
  "dependencies": {
    "probot": "12.1.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "2.2.2",
    "@octokit/rest": "18.12.0",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "husky": "7.0.2",
    "prettier": "2.4.1",
    "tsup": "5.4.0",
    "typescript": "4.4.3"
  },
  "engines": {
    "node": ">= 10.13.0"
  }
}
